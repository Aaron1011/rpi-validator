{
    "root": true,
    "plugins": [
        "jsdoc",
        "optimize-regex"
    ],
    "env": {
        "es6": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": [
            "error"
        ],

        "jsdoc/check-param-names": 2,
        "jsdoc/check-tag-names": 1,
        "jsdoc/check-types": 1,
        "jsdoc/newline-after-description": 2,
        "jsdoc/no-undefined-types": 1,
        "jsdoc/valid-types": 1,

        "optimize-regex/optimize-regex": 1
    }
}